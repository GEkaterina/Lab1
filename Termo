#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

int main(int argc, char** argv)
{


    float c, f, k;
    double temp;
    char scale;



    if (argc == 1)
    {
        printf("syntax : \n\ttermo.exe t\n     or\n\ttermo.exe t c\n where t - temperature, c - scale (C, F, K)");

    }

    else if (argc == 3)
    {
        temp = atof(argv[1]);
        scale = *argv[2];


        if (scale == 'C' || scale == 'c')
        {

            f = temp * 9 / 5 + 32;
            k = temp + 273.15;
            printf("Convert %.2f C:\n%.2f F:\n%.2f K:",temp , f, k);
        }


        else if (scale == 'F' || scale =='f')
        {

            c = (temp - 32) * 5 / 9;
            k = c + 273.15;
            printf( "Convert %.2f F:\n%.2f C:\n%.2f K:",temp, c, k);
        }

        else if (scale == 'K' || scale == 'k')
        {

            c = temp - 273.15;
            f = c * 9 / 5 + 32;
            printf( "Convert %.2f K:\n%.2f C:\n%.2f F:", temp, c, f);
        }
        else
        printf("Incorrect scale");

    }

    else if (argc==2)
    {
        temp = atof(argv[1]);

        f = temp * 9 / 5 + 32;
        k = temp + 273.15;
        printf("Convert %.2f\n%.2f C:\n%.2f F:\n%.2f K:", temp, temp, f, k);
        c = (temp - 32) * 5 / 9;
        k = c + 273.15;
        printf("\n\n%.2f F:\n%.2f C:\n%.2f K:", temp, c, k);
        c = temp - 273.15;
        f = c * 9 / 5 + 32;
        printf("\n\n%.2f K:\n%.2f C:\n%.2f F:", temp, c, f);
    }
getch();
}
